<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:OutdoorTraker.Controls">

    <Style TargetType="controls:HeaderControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:HeaderControl">
					<StackPanel Orientation="Vertical">
						<TextBlock FontWeight="Bold" Margin="5,10,5,2" Text="{TemplateBinding Header}" />
						<ContentPresenter Margin="5,0,5,0" />
					</StackPanel>
				</ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
